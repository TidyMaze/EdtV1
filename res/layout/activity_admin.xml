<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@layout/background"
    tools:context=".AdminActivity" >

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/adminCompte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp" >

            <ImageButton
                android:contentDescription="@string/image_du_boutton"
                android:id="@+id/boutonCompte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/compte" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/adminFrise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp" >

            <ImageButton
                android:contentDescription="@string/image_du_boutton"
                android:id="@+id/boutonFrise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/frise" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/adminActivite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp" >

            <ImageButton
                android:contentDescription="@string/image_du_boutton"
                android:id="@+id/boutonActivite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/activite" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/adminParam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp" >

            <ImageButton
                android:contentDescription="@string/image_du_boutton"
                android:id="@+id/boutonParametres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/parametres" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>